import { cleanPath } from "@parameter1/base-web-utils";

$ const { conf } = out.global;
$ const parts = [
  input.value,
  conf.get("site.name"),
];
$ const concatWith = input.concatWith || "|";
$ const title = parts.filter(v => v).join(` ${concatWith} `);

<title>
  <if(input.renderBody)>
    <${input.renderBody} />
  </if>
  <else>
    ${title}
  </else>
</title>
